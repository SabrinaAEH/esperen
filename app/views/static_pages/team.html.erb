            <img src="<%= asset_path('CA.png') %>" class="card-img-top" alt="le CA">
            <div class="card-body">
              <h5 class="card-title">Le conseil d'administration</h5>
              <p class="card-text">Voici les 8 membres du CA actuel.</p>
            </div>
          </div>
        </div>
      </div>
    </div>

<script>
document.addEventListener("DOMContentLoaded", function() {
    const button = document.getElementById('toggle-dyslexia');
    button.addEventListener('click', function() {
        document.body.classList.toggle('dyslexia-mode');
        if (document.body.classList.contains('dyslexia-mode')) {
            button.textContent = 'Désactiver OpenDyslexic';
        } else {
            button.textContent = 'Activer OpenDyslexic';
        }
    });
});
</script>
